{
  "compilerOptions": {
    "target": "ES2020",                          // modern enough for most Node environments
    "module": "CommonJS",                        // how imports/exports are emitted
    "outDir": "./dist",                          // compiled JS files go here
    "rootDir": "./src",                          // where your .ts source lives
    "strict": true,                              // enable all strict‚Äêtype checks
    "esModuleInterop": true,                     // allow default imports from CommonJS libs
    "skipLibCheck": true,                        // speed up compilation by skipping type checks on libs
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],                       // compile everything in src/
  "exclude": ["node_modules", "dist"]
}
