{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "*.ts"
, "relevance/relevance.ts", "categorizer/test-categorizer.ts", "categorizer/test-example.ts", "categorizer/categorizer.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 
